@model DevelopmentPracticalTest.ClientContact

@{
    ViewData["Title"] = "Link Contact";
}

<h2>Link Contact to Client</h2>

<form asp-action="LinkContact" method="post">
    <input type="hidden" asp-for="ClientId" />

    <div class="form-group">
        <label asp-for="SelectedContactId" class="control-label">Select Contact</label>
        <select asp-for="SelectedContactId" asp-items="Model.Contacts" class="form-control"></select>
        <span asp-validation-for="SelectedContactId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Link Contact</button>
</form>
